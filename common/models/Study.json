{
  "name": "Study",
  "plural": "Studies",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "description": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": false,
      "description": "first date of the study"
    },
    "creationDate": {
      "type": "date",
      "required": false,
      "description": "date of creation"
    },
    "endDate": {
      "type": "date",
      "required": false,
      "description": "last date of the study"
    },
    "duration": {
      "type": "number",
      "required": false,
      "description": "duration of a single study in minutes"
    },
    "locations_array": {
      "type": "array",
      "required": false
    },
    "approved": {
      "type": "boolean",
      "required": false
    },
    "title": {
      "type": "string",
      "required": true
    },
    "reward": {
      "type": {
        "reward_money": "number",
        "reward_voucher": "number",
        "reward_hours": "number"
      }
    },
    "keywords_array": {
      "type": "array",
      "required": false
    },
    "minimum_age": {
      "type": "number",
      "required": false,
      "description": "in cm"
    },
    "minimum_height": {
      "type": "number",
      "required": false,
      "description": "in cm"
    },
    "operatingSystem_required": {
      "type": {
        "android": "boolean",
        "ios": "boolean",
        "windows": "boolean"
      },
      "required": false
    },
    "visualAid_required": {
      "type": {
        "glasses": "boolean",
        "contactLenses": "boolean",
        "none": "boolean"
      },
      "required": false
    },
    "language_required": {
      "type": {
        "english": "boolean",
        "german": "boolean"
      },
      "required": false
    },
    "required_handedness": {
      "type": "string",
      "required": false,
      "description": "lefty, righty, both"
    },
    "required_study_programs_array": {
      "type": "array",
      "required": false
    },
    "required_gender": {
      "type": {
        "male": "boolean",
        "female": "boolean"
      },
      "required": false,
      "description": "could be expanded to accept ratios"
    }
  },
  "validations": [],
  "relations": {
    "dates": {
      "type": "hasMany",
      "model": "StudyDate",
      "foreignKey": "studyId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Subuser",
      "foreignKey": ""
    },
    "participations": {
      "type": "hasMany",
      "model": "Participation",
      "foreignKey": "studyId"
    },
    "advisor": {
      "type": "belongsTo",
      "model": "Subuser",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "advisor",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {}
}
